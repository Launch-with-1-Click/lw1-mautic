{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "product_version": "{{env `PRODUCT_VERSION`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-b73b63a0",
      "instance_type": "c3.large",
      "ssh_username": "ec2-user",
      "ssh_timeout": "10m",
      "ssh_pty" : true,
      "ami_name": "Mautic {{user `product_version`}} {{timestamp}}"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "bootstrap.sh"
      ]
    },
    {
      "type": "file",
      "source" : ".composer/auth.json",
      "destination" : "/home/ec2-user/.composer/auth.json"
    },
    {
      "type": "chef-solo",
      "json" : {
        "composer" : {
          "owner" : "root",
          "group" : "apache"
        }
      },
      "cookbook_paths": [
        "cookbooks",
        "site-cookbooks"
      ],
      "run_list" : [
        "mautic::pre_packages",
        "composer::default",
        "mautic::mautic",
        "mautic::setup_tasks"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "cleanup.sh"
      ]
    }
  ]
}
